{% assign has_announcement = section.settings.show_announcement %}

<div class="absolute w-full z-50" x-data="{ mobileMenuOpen: false }">
  <nav class="relative {% if has_announcement %}mt-10{% endif %}">
    <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-12">
      <div class="flex justify-between items-center h-24">
        <!-- Logo -->
        <div class="flex-shrink-0 flex items-center">
          {% if section.settings.logo != blank %}
            <a href="/" class="block h-10 w-auto">
              <img class="h-10 w-auto" src="{{ section.settings.logo | img_url: 'medium' }}" alt="{{ shop.name }}">
            </a>
          {% else %}
            <a href="/" class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-emerald-600 to-teal-600">
              {{ shop.name }}
            </a>
          {% endif %}
        </div>

        <!-- Desktop Navigation -->
        <div class="hidden md:flex md:items-center md:space-x-12">
          {% for link in linklists[section.settings.menu].links %}
            <a href="{{ link.url }}" 
               class="text-base font-medium text-emerald-800 hover:text-transparent hover:bg-clip-text hover:bg-gradient-to-r hover:from-emerald-600 hover:to-teal-600 transition-all duration-200 {% if link.active %}text-transparent bg-clip-text bg-gradient-to-r from-emerald-600 to-teal-600{% endif %}">
              {{ link.title }}
            </a>
          {% endfor %}
        </div>

        <!-- Cart and Mobile Menu Button -->
        <div class="flex items-center space-x-6">
          <a href="/cart" class="relative group p-2">
            <span class="sr-only">Cart</span>
            <svg class="h-6 w-6 text-emerald-800 group-hover:text-transparent group-hover:bg-clip-text group-hover:bg-gradient-to-r group-hover:from-emerald-600 group-hover:to-teal-600 transition-colors duration-200" 
                 fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
            </svg>
            {% if cart.item_count > 0 %}
              <span class="absolute top-0 right-0 -mt-1 -mr-1 h-5 w-5 rounded-full bg-gradient-to-r from-emerald-600 to-teal-600 flex items-center justify-center text-xs font-bold text-white transform scale-100 group-hover:scale-110 transition-transform duration-200">
                {{ cart.item_count }}
              </span>
            {% endif %}
          </a>

          <!-- Mobile menu button -->
          <button @click="mobileMenuOpen = !mobileMenuOpen" 
                  type="button" 
                  class="md:hidden p-2 text-emerald-800 hover:text-transparent hover:bg-clip-text hover:bg-gradient-to-r hover:from-emerald-600 hover:to-teal-600 transition-colors duration-200" 
                  aria-controls="mobile-menu" 
                  aria-expanded="false">
            <span class="sr-only">Open menu</span>
            <svg class="h-6 w-6" x-show="!mobileMenuOpen" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
            <svg class="h-6 w-6" x-show="mobileMenuOpen" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Mobile menu -->
    <div class="md:hidden absolute w-full" id="mobile-menu" x-show="mobileMenuOpen" 
         x-transition:enter="transition ease-out duration-200"
         x-transition:enter-start="opacity-0 -translate-y-1"
         x-transition:enter-end="opacity-100 translate-y-0"
         x-transition:leave="transition ease-in duration-150"
         x-transition:leave-start="opacity-100 translate-y-0"
         x-transition:leave-end="opacity-0 -translate-y-1">
      <div class="pt-2 pb-3 px-6 bg-white/95 backdrop-blur-lg shadow-lg rounded-b-2xl">
        {% for link in linklists[section.settings.menu].links %}
          <a href="{{ link.url }}" 
             class="block py-4 text-base font-medium text-emerald-800 hover:text-transparent hover:bg-clip-text hover:bg-gradient-to-r hover:from-emerald-600 hover:to-teal-600 transition-colors duration-200 border-b border-emerald-50 {% if link.active %}text-transparent bg-clip-text bg-gradient-to-r from-emerald-600 to-teal-600{% endif %}">
            {{ link.title }}
          </a>
        {% endfor %}
      </div>
    </div>
  </nav>
</div>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    },
    {
      "type": "checkbox",
      "id": "show_announcement",
      "label": "Show announcement bar",
      "default": true
    }
  ]
}
{% endschema %}

{% javascript %}
// Add Alpine.js for mobile menu functionality
if (!window.Alpine) {
  let script = document.createElement('script');
  script.src = 'https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js';
  script.defer = true;
  document.head.appendChild(script);
}
{% endjavascript %}
