{% assign show_announcement = section.settings.show_announcement %}
{% assign overlay_opacity = section.settings.overlay_opacity | times: 0.01 %}

<div class="relative min-h-screen bg-emerald-900">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0">
    {% if section.settings.image != blank %}
      <img 
        src="{{ section.settings.image | img_url: '2000x' }}" 
        alt="{{ section.settings.image.alt | escape }}"
        class="absolute inset-0 w-full h-full object-cover opacity-40"
      >
    {% endif %}
  </div>

  <!-- Content -->
  <div class="relative max-w-7xl mx-auto px-4 py-16 sm:px-6 sm:py-24 lg:px-8">
    <!-- Main Content Area -->
    <div class="max-w-3xl">
      <!-- Main Heading -->
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-white mb-8 font-playfair leading-tight">
        Start Your Wellness Journey Today
      </h1>

      <!-- Description -->
      <p class="text-xl text-white/90 mb-12 font-inter leading-relaxed">
        Experience the power of natural detoxification. Our carefully crafted programs help cleanse your body, boost energy levels, and restore your natural balance.
      </p>

      <!-- Features -->
      <div class="grid grid-cols-3 gap-8 mb-12">
        <div class="flex items-center text-white/90 font-inter">
          <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22Z" stroke-width="2"/>
          </svg>
          Reset Your Body
        </div>
        <div class="flex items-center text-white/90 font-inter">
          <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22Z" stroke-width="2"/>
            <path d="M8 12L11 15L16 9" stroke-width="2"/>
          </svg>
          Natural Ingredients
        </div>
        <div class="flex items-center text-white/90 font-inter">
          <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path d="M13 2L3 14H12L11 22L21 10H12L13 2Z" stroke-width="2"/>
          </svg>
          Boost Energy
        </div>
      </div>

      <!-- Find Your Perfect Detox Button -->
      <button id="quiz-trigger"
              class="inline-flex items-center px-8 py-4 rounded-full bg-white text-emerald-900 text-lg font-medium hover:bg-white/90 transition-all duration-200 transform hover:-translate-y-0.5 font-inter">
        <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22Z" stroke-width="2"/>
        </svg>
        Find Your Perfect Detox
      </button>
    </div>
  </div>
</div>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@400;500;600;700&display=swap');

  .font-playfair {
    font-family: 'Playfair Display', serif;
  }

  .font-inter {
    font-family: 'Inter', sans-serif;
  }
</style>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Overlay Opacity",
      "default": 70
    }
  ],
  "presets": [
    {
      "name": "Hero",
      "category": "Hero"
    }
  ]
}
{% endschema %}

<script>
document.getElementById('quiz-trigger').addEventListener('click', function() {
  // Trigger quiz modal or navigation
  if (window.openDetoxQuiz) {
    window.openDetoxQuiz();
  }
});
</script>
