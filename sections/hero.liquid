{% assign show_announcement = section.settings.show_announcement %}

<div class="relative min-h-screen bg-[#F5F2EA]">
  <!-- Background pattern -->
  <div class="absolute inset-0 opacity-10 pattern-dots"></div>
  
  <div class="relative max-w-7xl mx-auto px-6 sm:px-8 lg:px-12 pt-32 pb-24 sm:pt-40 sm:pb-32">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-24 items-center">
      <!-- Text Content -->
      <div class="relative z-10">
        <div class="inline-flex items-center px-4 py-2 rounded-full bg-emerald-900/10 text-emerald-900 text-sm font-medium mb-8">
          100% HOMEGROWN
        </div>
        
        <h1 class="text-6xl sm:text-7xl lg:text-8xl font-bold text-emerald-900 leading-none mb-6">
          {{ section.settings.heading }}
          <span class="block mt-2 text-5xl sm:text-6xl lg:text-7xl">{{ section.settings.subheading }}</span>
        </h1>
        
        <p class="text-lg sm:text-xl text-emerald-800/80 max-w-xl mb-12">
          {{ section.settings.description }}
        </p>
        
        <div class="flex flex-wrap gap-4">
          {% if section.settings.button_label != blank %}
            <a href="{{ section.settings.button_link }}" 
               class="inline-flex items-center px-8 py-4 rounded-full bg-emerald-900 text-white text-lg font-medium hover:bg-emerald-800 transition-colors duration-200">
              {{ section.settings.button_label }}
              <svg class="ml-2 -mr-1 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
          {% endif %}
        </div>
      </div>
      
      <!-- Image -->
      <div class="relative">
        {% if section.settings.image != blank %}
          <div class="relative aspect-[4/5] rounded-2xl overflow-hidden">
            <img 
              src="{{ section.settings.image | img_url: '1000x' }}" 
              alt="{{ section.settings.image.alt | escape }}"
              class="absolute inset-0 w-full h-full object-cover"
            >
          </div>
        {% else %}
          <div class="aspect-[4/5] rounded-2xl bg-emerald-100"></div>
        {% endif %}
        
        <!-- Decorative elements -->
        <div class="absolute -top-4 -right-4 w-24 h-24 rounded-full bg-emerald-100"></div>
        <div class="absolute -bottom-4 -left-4 w-32 h-32 rounded-full bg-emerald-50"></div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "THE PURE"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "GOODNESS"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "MORE VIBRANT LIFESTYLE STARTS WITH ASÃ‰! EMBRACE THE PURITY OF NATURE WITH OUR EXQUISITE LINE OF NATURAL JUICES!"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "EXPLORE TASTES"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero image"
    }
  ],
  "presets": [
    {
      "name": "Hero",
      "category": "Hero"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.pattern-dots {
  background-image: radial-gradient(#065F46 1px, transparent 1px);
  background-size: 20px 20px;
}
{% endstylesheet %}
