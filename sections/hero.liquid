{% assign show_announcement = section.settings.show_announcement %}

<div class="relative min-h-screen bg-gradient-to-b from-emerald-50 to-cyan-50/50">
  <!-- Main Content -->
  <div class="relative max-w-7xl mx-auto px-4">
    <div class="flex flex-col min-h-screen">
      <!-- Product Image Section -->
      <div class="relative flex-1 flex items-center justify-center pt-20 pb-8">
        {% if section.settings.image != blank %}
          <div class="relative w-full max-w-md mx-auto">
            <div class="relative rounded-3xl overflow-hidden">
              <!-- Green overlay -->
              <div class="absolute inset-0 bg-emerald-600/10 mix-blend-multiply z-10"></div>
              
              <img 
                src="{{ section.settings.image | img_url: '800x' }}" 
                alt="{{ section.settings.image.alt | escape }}"
                class="relative w-full h-auto object-contain"
              >
            </div>
          </div>
        {% endif %}
      </div>

      <!-- Text Content Section -->
      <div class="relative pb-16 text-center">
        <div class="inline-flex items-center px-4 py-1.5 rounded-full bg-emerald-100/50 text-emerald-800 text-sm font-medium mb-4">
          100% HOMEGROWN
        </div>
        
        <h1 class="text-5xl sm:text-6xl font-bold text-emerald-800 leading-none mb-4">
          <span class="block">{{ section.settings.heading }}</span>
          <span class="block">{{ section.settings.subheading }}</span>
        </h1>
        
        <p class="text-lg text-emerald-700/80 max-w-xl mx-auto mb-8 leading-relaxed px-4">
          {{ section.settings.description }}
        </p>
        
        {% if section.settings.button_label != blank %}
          <a href="{{ section.settings.button_link }}" 
             class="inline-flex items-center px-6 py-3 rounded-full bg-emerald-700 text-white text-base font-medium hover:bg-emerald-800 transition-colors duration-200">
            {{ section.settings.button_label }}
            <svg class="ml-2 -mr-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "THE PURE"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "GOODNESS"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "MORE VIBRANT LIFESTYLE STARTS WITH ASÃ‰! EMBRACE THE PURITY OF NATURE WITH OUR EXQUISITE LINE OF NATURAL JUICES!"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "EXPLORE TASTES"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero image"
    }
  ],
  "presets": [
    {
      "name": "Hero",
      "category": "Hero"
    }
  ]
}
{% endschema %}
