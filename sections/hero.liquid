{% assign show_announcement = section.settings.show_announcement %}

<div class="relative bg-white overflow-hidden {% if show_announcement %}mt-16{% else %}mt-24{% endif %}">
  <div class="max-w-7xl mx-auto">
    <div class="relative z-10 pb-8 bg-white sm:pb-16 md:pb-20 lg:w-full lg:pb-28 xl:pb-32">
      <div class="relative pt-6 px-4 sm:px-6 lg:px-8"></div>
      
      <main class="mt-10 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-8 xl:mt-28">
        <div class="sm:text-center lg:text-left">
          <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
            <span class="block xl:inline">{{ section.settings.heading }}</span>
            <span class="block text-gradient xl:inline">{{ section.settings.subheading }}</span>
          </h1>
          
          <p class="mt-3 text-base text-gray-500 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0">
            {{ section.settings.description }}
          </p>
          
          <div class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
            {% if section.settings.button_label != blank %}
              <div class="rounded-md shadow">
                <a href="{{ section.settings.button_link }}" 
                   class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-brand-gradient hover:opacity-90 md:py-4 md:text-lg md:px-10">
                  {{ section.settings.button_label }}
                </a>
              </div>
            {% endif %}
            
            {% if section.settings.secondary_button_label != blank %}
              <div class="mt-3 sm:mt-0 sm:ml-3">
                <a href="{{ section.settings.secondary_button_link }}" 
                   class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-gray-700 bg-gray-100 hover:bg-gray-200 md:py-4 md:text-lg md:px-10">
                  {{ section.settings.secondary_button_label }}
                </a>
              </div>
            {% endif %}
          </div>
        </div>
      </main>
    </div>
  </div>
  
  <div class="lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2">
    {% if section.settings.image != blank %}
      <img class="h-56 w-full object-cover sm:h-72 md:h-96 lg:w-full lg:h-full" 
           src="{{ section.settings.image | img_url: '1000x' }}" 
           alt="{{ section.settings.image.alt | escape }}">
    {% else %}
      <div class="h-56 w-full bg-gray-200 sm:h-72 md:h-96 lg:w-full lg:h-full"></div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Transform Your Health"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "With Natural Solutions"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover our range of natural wellness products designed to help you achieve optimal health and vitality."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "text",
      "id": "secondary_button_label",
      "label": "Secondary button label",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary button link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero image"
    },
    {
      "type": "checkbox",
      "id": "show_announcement",
      "label": "Has announcement bar",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Hero",
      "category": "Hero"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.text-gradient {
  background: linear-gradient(135deg, var(--gradient-start), var(--gradient-end));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}
{% endstylesheet %}
