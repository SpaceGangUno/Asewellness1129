{% assign show_announcement = section.settings.show_announcement %}
{% assign overlay_opacity = section.settings.overlay_opacity | times: 0.01 %}

<div class="relative min-h-[600px] bg-emerald-900 font-inter">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0">
    {% if section.settings.image != blank %}
      <img 
        src="{{ section.settings.image | img_url: '2000x' }}" 
        alt="{{ section.settings.image.alt | escape }}"
        class="absolute inset-0 w-full h-full object-cover opacity-40"
      >
    {% endif %}
  </div>

  <!-- Content -->
  <div class="relative max-w-7xl mx-auto px-4 py-16 sm:px-6 sm:py-24 lg:px-8">
    <!-- Main Heading -->
    <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-white max-w-4xl mb-8 font-playfair">
      Start Your<br>
      Wellness Journey<br>
      Today
    </h1>

    <!-- Description Box -->
    <div class="bg-emerald-800/30 backdrop-blur-sm rounded-2xl p-6 max-w-2xl mb-12">
      <p class="text-lg text-white/90 font-inter">
        Experience the power of natural detoxification. Our carefully crafted programs help cleanse your body, boost energy levels, and restore your natural balance.
      </p>
    </div>

    <!-- Transform Your Life Button -->
    <div class="text-center">
      <button id="quiz-trigger"
              class="inline-flex items-center px-8 py-4 rounded-full bg-white text-emerald-900 text-lg font-semibold hover:bg-white/90 transition-all duration-200 transform hover:-translate-y-0.5 font-inter">
        <svg class="w-6 h-6 mr-2" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M8 14C8 14 9.5 16 12 16C14.5 16 16 14 16 14" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M9 9H9.01" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M15 9H15.01" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        Transform Your Life with Our Detox Programs
        <svg class="w-5 h-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
        </svg>
      </button>
    </div>
  </div>
</div>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap');

  .font-inter {
    font-family: 'Inter', sans-serif;
  }

  .font-playfair {
    font-family: 'Playfair Display', serif;
  }
</style>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Overlay Opacity",
      "default": 70
    }
  ],
  "presets": [
    {
      "name": "Hero",
      "category": "Hero"
    }
  ]
}
{% endschema %}

<script>
document.getElementById('quiz-trigger').addEventListener('click', function() {
  // Trigger quiz modal or navigation
  if (window.openDetoxQuiz) {
    window.openDetoxQuiz();
  }
});
</script>
