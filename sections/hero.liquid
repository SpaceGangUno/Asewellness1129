{% assign show_announcement = section.settings.show_announcement %}
{% assign overlay_opacity = section.settings.overlay_opacity | times: 0.01 %}

<div class="relative h-[500px] sm:h-[500px]">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0">
    {% if section.settings.image != blank %}
      <img 
        src="{{ section.settings.image | img_url: '2000x' }}" 
        alt="{{ section.settings.image.alt | escape }}"
        class="absolute inset-0 w-full h-full object-cover"
      >
      <!-- Gradient overlay with customizable opacity -->
      <div class="absolute inset-0 bg-gradient-to-br from-green-400/{{ section.settings.overlay_opacity }} via-teal-400/{{ section.settings.overlay_opacity }} to-blue-400/{{ section.settings.overlay_opacity }}"
           style="mix-blend-mode: multiply;"></div>
    {% else %}
      <div class="absolute inset-0 bg-gradient-to-br from-green-400 via-teal-400 to-blue-400"></div>
    {% endif %}
  </div>

  <!-- Content -->
  <div class="relative h-full flex flex-col items-center justify-center px-4">
    <div class="max-w-7xl mx-auto w-full text-center">      
      <h1 class="text-4xl sm:text-5xl font-bold text-white leading-none mb-4">
        <span class="block">{{ section.settings.heading }}</span>
        <span class="block mt-2">{{ section.settings.subheading }}</span>
      </h1>
      
      <p class="text-base sm:text-lg text-white/90 max-w-xl mx-auto mb-6">
        {{ section.settings.description }}
      </p>
      
      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_link }}" 
           class="inline-flex items-center px-6 py-3 rounded-full bg-white text-emerald-800 text-base font-medium hover:bg-white/90 transition-colors duration-200">
          {{ section.settings.button_label }}
          <svg class="ml-2 -mr-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      {% endif %}
    </div>
  </div>

  <!-- Wave Divider -->
  <div class="absolute bottom-0 left-0 w-full overflow-hidden leading-none">
    <svg class="relative block w-full h-[50px]" data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
      <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z" 
            class="fill-current text-white"></path>
    </svg>
  </div>
</div>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "THE PURE"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "GOODNESS"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "MORE VIBRANT LIFESTYLE STARTS WITH ASÃ‰! EMBRACE THE PURITY OF NATURE WITH OUR EXQUISITE LINE OF NATURAL JUICES!"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "EXPLORE TASTES"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Overlay Opacity",
      "default": 70
    }
  ],
  "presets": [
    {
      "name": "Hero",
      "category": "Hero"
    }
  ]
}
{% endschema %}
