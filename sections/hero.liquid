{% assign show_announcement = section.settings.show_announcement %}
{% assign overlay_opacity = section.settings.overlay_opacity | times: 0.01 %}

<div class="relative min-h-screen">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0">
    {% if section.settings.image != blank %}
      <img 
        src="{{ section.settings.image | img_url: '2000x' }}" 
        alt="{{ section.settings.image.alt | escape }}"
        class="absolute inset-0 w-full h-full object-cover"
      >
      <!-- Green overlay with customizable opacity -->
      <div class="absolute inset-0 bg-gradient-to-b from-emerald-600 to-emerald-800" 
           style="opacity: {{ overlay_opacity }}; mix-blend-mode: multiply;"></div>
    {% else %}
      <div class="absolute inset-0 bg-gradient-to-b from-emerald-50 to-cyan-50"></div>
    {% endif %}
  </div>

  <!-- Content -->
  <div class="relative min-h-screen flex flex-col items-center justify-center px-4 py-20">
    <div class="max-w-7xl mx-auto w-full text-center">
      <div class="inline-flex items-center px-4 py-1.5 rounded-full bg-white/10 backdrop-blur-sm text-white text-sm font-medium mb-6">
        100% HOMEGROWN
      </div>
      
      <h1 class="text-5xl sm:text-6xl font-bold text-white leading-none mb-6">
        <span class="block">{{ section.settings.heading }}</span>
        <span class="block mt-2">{{ section.settings.subheading }}</span>
      </h1>
      
      <p class="text-lg text-white/90 max-w-xl mx-auto mb-8 leading-relaxed">
        {{ section.settings.description }}
      </p>
      
      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_link }}" 
           class="inline-flex items-center px-6 py-3 rounded-full bg-white text-emerald-800 text-base font-medium hover:bg-white/90 transition-colors duration-200">
          {{ section.settings.button_label }}
          <svg class="ml-2 -mr-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "THE PURE"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "GOODNESS"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "MORE VIBRANT LIFESTYLE STARTS WITH ASÃ‰! EMBRACE THE PURITY OF NATURE WITH OUR EXQUISITE LINE OF NATURAL JUICES!"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "EXPLORE TASTES"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Overlay Opacity",
      "default": 70
    },
    {
      "type": "header",
      "content": "Overlay Settings"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay Color",
      "default": "#047857"
    }
  ],
  "presets": [
    {
      "name": "Hero",
      "category": "Hero"
    }
  ]
}
{% endschema %}
