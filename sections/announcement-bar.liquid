{% if section.settings.show_announcement %}
  <div class="relative bg-emerald-900">
    <div class="max-w-7xl mx-auto py-3 px-6 sm:px-8 lg:px-12">
      <div class="text-center">
        {% if section.settings.announcement_link != blank %}
          <a href="{{ section.settings.announcement_link }}" 
             class="group inline-flex items-center justify-center space-x-3 text-sm font-medium text-white/90 hover:text-white transition-colors duration-200">
            <span>{{ section.settings.announcement_text }}</span>
            <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        {% else %}
          <p class="text-sm font-medium text-white/90">
            {{ section.settings.announcement_text }}
          </p>
        {% endif %}
      </div>
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Announcement Bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_announcement",
      "label": "Show announcement",
      "default": true
    },
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Announcement text",
      "default": "Free shipping on orders over $100"
    },
    {
      "type": "url",
      "id": "announcement_link",
      "label": "Announcement link"
    }
  ]
}
{% endschema %}
